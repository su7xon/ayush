# TEA-TIME Environment Configuration
# Copy this file to .env and replace with your actual values

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# App Configuration
EXPO_PUBLIC_APP_NAME=TEA-TIME
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_BUNDLE_ID=com.teatime.app

# Development Settings
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_DEBUG_MODE=false

# Analytics (Optional)
EXPO_PUBLIC_ANALYTICS_API_KEY=your-analytics-key
EXPO_PUBLIC_CRASHLYTICS_ENABLED=true

# Push Notifications (Optional)
EXPO_PUBLIC_PUSH_NOTIFICATION_KEY=your-push-key

# Media Storage (Optional - if using external CDN)
EXPO_PUBLIC_MEDIA_CDN_URL=https://your-cdn.com
EXPO_PUBLIC_MAX_FILE_SIZE=10485760

# Social Features
EXPO_PUBLIC_MAX_POLL_OPTIONS=6
EXPO_PUBLIC_MAX_POST_LENGTH=500
EXPO_PUBLIC_MAX_RUMOR_LENGTH=1000
EXPO_PUBLIC_DEFAULT_POLL_DURATION=24
EXPO_PUBLIC_DEFAULT_CHALLENGE_DURATION=7

# Moderation
EXPO_PUBLIC_CONTENT_FILTER_ENABLED=true
EXPO_PUBLIC_AUTO_MODERATION=false
EXPO_PUBLIC_REPORT_THRESHOLD=5

# College Verification
EXPO_PUBLIC_EMAIL_VERIFICATION_REQUIRED=true
EXPO_PUBLIC_SUPPORTED_DOMAINS=.edu,.ac.uk,.edu.au

# Rate Limiting
EXPO_PUBLIC_POST_RATE_LIMIT=10
EXPO_PUBLIC_COMMENT_RATE_LIMIT=50
EXPO_PUBLIC_REACTION_RATE_LIMIT=100